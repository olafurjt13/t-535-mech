#define FOSC 16000000
#define BAUD 9600
#define MYUBRR FOSC/16/BAUD - 1

#include <avr/io.h>
#include <avr/interrupt.h>
#include "myUSART.h"


void USART_Transmit_byte_hex(unsigned char byte){
	unsigned char LSN = (byte & 0x0F);
	unsigned char MSN = ((byte >> 4) & 0x0F);
	if(LSN <= 0x09){LSN += 0x30;}
	else if(LSN <= 0x0F){LSN += 0x37;}

	if(MSN <= 0x09){MSN += 0x30;}
	else if(MSN <= 0xA){MSN += 0x37;}

	USART_Transmit('0');
	USART_Transmit('x');
	USART_Transmit(MSN);
	USART_Transmit(LSN);
	USART_Transmit(0x20);
}

int main(){
	asm("sei");
	USART_init(MYUBRR);
	unsigned char c[40] = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ";


	while(1){
		if(dataReceived){
			for(char i = 0; i < 36; i++){
				USART_Transmit_byte_hex(c[i]);
			}
			dataReceived = 0;
		}
	}

	return 0;
}
