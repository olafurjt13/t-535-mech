#define FOSC 160000000
#define BAUD 9600
#define MYUBRR FOSC/16/BAUD - 1

#include <avr/io.h>
#include <avr/interrupt.h>

#include "Led.h"
#include "myUSART.h"
#include "clockFuncs.h"


ISR(TIMER0_COMPB_vect){
	PORTB |= 0x10;
	//Led_on();
}

ISR(TIMER0_OVF_vect){
	PORTB &= ~0x10;
	//Led_off();
}

void setLedPWM(unsigned char intensity){
	if (intensity > 100){intensity = 100;};
	OCR0B = (intensity*255)/100;
}

int main(){
	asm("sei");
	clock_init();
	USART_init(MYUBRR);
	Led_init();
	setLedPWM(0);

	rxBuffer = 0;
	unsigned char rxByte;
	while(1){
		rxByte = rxBuffer;
			if(rxByte == '1'){
				setLedPWM(100);
			}
			else if(rxByte == '2'){
				setLedPWM(50);
			}
			else if(rxByte == '3'){
				setLedPWM(30);
			}
			else if(rxByte == '4'){
				setLedPWM(0);
			}
			if(sendBack == 1){
						USART_Transmit(OCR0B);
						sendBack = 0;
			}
		}
	return 0;
}


